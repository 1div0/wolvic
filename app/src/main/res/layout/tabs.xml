<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">
        <org.mozilla.vrbrowser.ui.views.UIButton
            android:id="@+id/tabsBackButton"
            style="?attr/mediaControlsButtonStyle"
            android:layout_weight="1"
            android:tint="@color/midnight"
            android:src="@drawable/ic_icon_back" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100" />


        <org.mozilla.vrbrowser.ui.views.UITextButton
            android:id="@+id/tabsAddNewButton"
            style="?attr/mediaControlsButtonStyle"
            android:layout_width="wrap_content"
            android:text="Add New Tab" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tabsRecyclerView"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>